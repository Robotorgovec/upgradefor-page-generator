{
  "builds": [
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/_upgr_deploy_check.txt", "dest": "/_upgr_deploy_check.txt" },
    { "src": "/_upgr_deploy_check.html", "dest": "/_upgr_deploy_check.html" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
