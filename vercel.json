{
  "builds": [
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "headers": [
    {
      "source": "/_upgr_deploy_check.txt",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate, max-age=0" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/$1" }
  ]
}
