generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  passwordHash  String
  role          String       @default("user")
  emailVerified DateTime?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  profile Profile?
  tokens  EmailToken[]
}

model Profile {
  userId      String  @id
  displayName String?
  avatarUrl   String?
  bio         String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EmailToken {
  id        String   @id @default(cuid())
  userId    String
  type      String
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
